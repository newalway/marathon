{% form_theme form 'bootstrap_3_layout.html.twig' %}

<div class="box-body icheck">

	<div class="form-group">
	    <label class="control-label col-md-2" for="status"> Translation</label>
		<div class="col-md-9">
		    {{ form_widget(form.translations) }}
	    </div>
	</div>

	<div class="form-group">
		<label class="control-label col-md-2" for="parent">Icon </label>
		<div class="col-md-6 form-control-static">
			{{form_widget(form.icon, {'id' : 'icon'})}}
			<a href="javascript:void(0)" onclick="selectFileWithCKFinder('icon', 'image_thumbnail');" style="" >
				{% if form.vars.value.icon %}
					<img id="image_thumbnail" class="img-responsive" src="{{asset(form.vars.value.icon)}}" alt="{{form.vars.value.getTitle}}" />
				{% else %}
					<img id="image_thumbnail" class="img-responsive" src="https://placehold.it/39x39" hight="39px;">
				{% endif %}
			</a>
			{% if form.vars.value.icon %}
				<span>
					<input type="checkbox" id="removefileicon" name="removefileicon" value="1">
					<label class="control-label" for="removefileicon">  Remove</label>
				</span>
			{% endif %}
			<p class="help-block">Icon size 39x39px</p>
		</div>
	</div>

	{# non translation #}
