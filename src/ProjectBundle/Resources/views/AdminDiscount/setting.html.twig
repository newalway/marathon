{% extends 'ProjectBundle::admin.html.twig' %}

{% block stylesheets %}
  {{ parent() }}
  <link href="{{asset('bootstrap-datetimepicker/css/bootstrap-datetimepicker.min.css')}}" rel="stylesheet"/>
  <style media="screen">
    ul {
        list-style: none;
    }
  </style>
{% endblock %}

{% block javascripts %}
  {{ parent() }}
  <script src="{{asset('bundles/fosjsrouting/js/router.js')}}"></script>
  <script src="{{path('fos_js_routing_js', {'callback': 'fos.Router.setData'})}}"></script>
  <script src="{{asset('moment/moment.js')}}"></script>
  <script src="{{asset('bootstrap-datetimepicker/js/bootstrap-datetimepicker.js')}}" type="text/javascript"></script>
{% endblock %}

{% use "ProjectBundle:AdminDiscount:blocks.html.twig" %}
{% use "ProjectBundle::flash_message.html.twig" %}

{% block content_header %}Discount Setting{% endblock %}
{% block breadcrumb_sub %}
	{{ parent() }}
	<li class="active">Setting</li>
{% endblock %}

{% block content %}
    <form id="data_form" action="{{path('admin_discount_setting', {'id': form.vars.value.id})}}" method="post" role="form" enctype="multipart/form-data">
        {{form_widget(form._token)}}
        {% include 'ProjectBundle:AdminDiscount:_form_setting.html.twig'%}
    </form>
{% endblock %}
