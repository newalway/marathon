
<div  class="modal fade" id="list-address-billing"  tabindex="-1" role="dialog">
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                <h4 class="modal-title">{% trans %}member.address.book{% endtrans %}</h4>
                <div id="addDataAddress" class="pull-right">
                    <a href="javascript:void(0)">{% trans %}member.address.book.new{% endtrans %}</a>
                </div>

            </div>
            <div class="modal-body">
                <!-- <button type="button"  class="btn btn-primary">Add new address</button> -->
                <table class="table">
                    <thead>
                        <tr>
                            <th></th>
                            <th>Full Name</th>
                            <th>Address</th>
                            <th>Phone Number</th>
                            <th>Tax ID</th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>

                        <tr ng-repeat="address in delivery_address">

                            <td> <input ng-model="model_addr.selected_delivery_address_id" type="radio" name="selected_delivery_address_id" id="selected_delivery_address_id{{'{{$index}}'}}" ng-value="address.id"> </td>
                            <td>
                                <label style="font-weight:normal;" for="selected_delivery_address_id{{'{{$index}}'}}">
                                {{'{{address.firstName}}'}} {{'{{address.lastName}}'}}
                                </label>
                            </td>
                            <td>
                                {#<label style="font-weight:normal;" for="selected_delivery_address_id{{'{{$index}}'}}"><label>#}
                                <div ng-show="address.companyName">{{'{{address.companyName}}'}}</div>
                                {{'{{address.address}}'}}, {{'{{address.district}}'}}, {{'{{address.amphure}}'}}, {{'{{address.province}}'}} {#, <span ng-show="address.countryCode"> {{'{{address.countryCode.country}}'}}</span>#} {{'{{address.postCode}}'}}
                            </td>
                            <td>{{'{{address.phone}}'}}</td>
                            <td>
                                {{'{{address.taxPayerId}}'}}
                            </td>
                            <td>
                                <div ng-show="address.defaultShipping" class="default-addr"><small>{% trans %}member.default.shipping.address{% endtrans %}</small></div>
                                <div ng-show="address.defaultTax" class="default-addr"><small>{% trans %}member.default.billing.address{% endtrans %}</small></div>
                            </td>
                        </tr>
                    </tbody>
                </table>
{#
{{'{{model_addr}}'}}
<div>The selected value is : {{'{{model_addr.selected_delivery_address_id}}'}}</div>
#}
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">{% trans %}member.button.close{% endtrans %}</button>
                <button ng-click="changeDeliveryAddress();" type="button" class="btn btn-primary">{% trans %}member.button.save{% endtrans %}</button>
            </div>
        </div><!-- /.modal-content -->
    </div><!-- /.modal-dialog -->
</div><!-- /.modal -->


<script type="text/javascript">
// $('#list-address-billing').on('click', function (event) {
//
// });

$('#selectShippingAddress').click(function () {
    $('#list-address-billing').modal({
        show: true,
        backdrop: 'static',
        keyboard: false,
    });
});

$('#selectBillingAddress').click(function () {
    $('#list-address-billing').modal({
        show: true,
        backdrop: 'static',
        keyboard: false,
    });
});

</script>
