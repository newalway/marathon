<div class="box-body">

		<div class="form-group">
		  <label class="control-label col-md-3" for="password"><span class="require">*</span> New Password</label>
		  <div class="input-group">
		      <span class="input-group-addon"><i class="fa fa-key"></i></span>
		      {{form_widget(form.plainPassword.first,{'id' : 'password', 'attr' : {'class' : 'form-control-static'}})}}
		      {{form_errors(form.plainPassword.first)}}
		  </div>
		</div>
		<div class="form-group">
		  <label class="control-label col-md-3" for="confirm-password"><span class="require">*</span> Confirm New Password</label>
		  <div class="input-group">
		      <span class="input-group-addon"><i class="fa fa-key"></i></span>
		      {{form_widget(form.plainPassword.second,{'id' : 'confirm-password', 'attr' : {'class' : 'form-control-static'}})}}
		      {{form_errors(form.plainPassword.second)}}
		  </div>
		</div>

</div>

<div class="box-footer">
	<div class="row">
		<div class="col-md-offset-3 col-md-7">
			{{form_widget(form.save, {'id' : 'save', 'label': btn_label_save})}}
			<a href="{{path('admin_user')}}" class="btn btn-default">{{btn_label_close}} </a>
		</div>
	</div>
</div>
