<div class="remove_icheck">
<div class="row">
	<div class="col-md-10">

		<div class="box">
			<div class="box-header with-border">
				<h3 class="box-title">Holiday</h3>
				<div class="box-tools pull-right"></div>
			</div>
			<!-- /.box-header -->
			<div class="box-body">
				<div class="row ">
					<div class="col-md-6">
						<div class="form-group">
							<label class="" for="title"><span class="require">*</span> Name</label>
							{{form_widget(form.title, {'id' : 'title'})}}
							<div class="error-form">{{form_errors(form.title)}}</div>
						</div>
					</div>
					<div class="col-md-6">
						<div class="form-group">
							<label class="" for="holidayDate"><span class="require">*</span> Date</label>
							{{form_widget(form.holidayDate, {'id' : 'holidayDate'})}}
							<div class="error-form">{{form_errors(form.holidayDate)}}</div>
						</div>
					</div>
				</div>
			</div>
		</div>
	</div> <!-- /.col-md-10 -->

	<div class="col-md-2">
	</div>

	<div class="row">
		<div class="col-md-offset-2 col-md-9">
			{{form_widget(form.save, {'id' : 'save', 'label': btn_label_save})}}
			{{form_widget(form.save_and_add, {'id' : 'save_and_add', 'label': btn_label_save_add})}}
			{{form_widget(form.save_and_edit, {'id' : 'save_and_edit', 'label': btn_label_save_edit})}}
			<a href="{% if app.session.get('back_to_url')['admin_holiday'] is defined %}{{app.session.get('back_to_url')['admin_holiday']}}{% else %}{{path('admin_holiday')}}{% endif %}" class="btn btn-default">{{btn_label_close}} </a>
		</div>
	</div>

</div>
</div>

<script>
	//html5 date for safari and other browser not support html5 date
	//webshims.setOptions('forms-ext', {types: 'date'});
	//webshims.polyfill('forms forms-ext');

	$(function() {
    $('#holidayDate').daterangepicker({

			{% if form.vars.value.id %}
				singleDatePicker: true,
				startDate: '{{form.vars.value.holidayDate|date('d/m/Y')}}',
			{% endif %}

			showDropdowns: true,
			locale: { format: 'DD/MM/YYYY' }
		});
		//$('input[name="daterange"]').daterangepicker({});
	});
</script>
