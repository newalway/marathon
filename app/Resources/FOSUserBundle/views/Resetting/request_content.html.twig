<div class="container fos-container">
  <h2 class="text-center">{{ 'reset_password.title'|trans }}</h2>
  <p>&nbsp;</p>
    <div class="fos-box">
        <div class="row">
            <div class="col-md-6 col-md-offset-3">
                <form action="{{ path('fos_user_resetting_send_email') }}" method="POST" class="fos_user_resetting_request">
                    <div class="form-group">
                        <label for="username">{{ 'resetting.request.username'|trans({}, 'FOSUserBundle') }}</label>
                        <input type="text" id="username" name="username" required="required" class="form-control"/>
                    </div>
                    <div class="text-center">
                        <button type="submit" id="_submit" name="_submit" class="btn btn-marathon">{{ 'resetting.request.submit'|trans({}, 'FOSUserBundle') }}</button>
                    </div>

                </form>
            </div>
        </div>
    </div>
    <p>&nbsp;</p>
    <br/>
</div>
