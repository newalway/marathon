    <form action="{{path('fos_user_profile_edit')}}" method="post" id="fos_user_profile_form" name="fos_user_profile_form" enctype="multipart/form-data" class="form-horizontal form-web" novalidate>
        {{form_widget(form._token)}}
        <div class="form-group">
            <label class="col-sm-3 control-label" for="email">{% trans %}member.personal.email{% endtrans %} <span class="red-text"> *</span></label>
            <div class="col-sm-6">
                {{form_widget(form.email, {'id' : 'email' })}}
                <div class="red-text">{{form_errors(form.email)}}</div>
            </div>
        </div>

        <div class="form-group">
            <label class="col-sm-3 control-label" for="first_name">{% trans %}member.personal.fname{% endtrans %} <span class="red-text"> *</span></label>
            <div class="col-sm-6">
                {{form_widget(form.first_name, {'id' : 'first_name'})}}
                <div class="red-text">{{form_errors(form.first_name)}}</div>
            </div>
        </div>

        <div class="form-group">
            <label class="col-sm-3 control-label" for="last_name">{% trans %}member.personal.lname{% endtrans %} <span class="red-text"> *</span></label>
            <div class="col-sm-6">
                {{form_widget(form.last_name, {'id' : 'last_name'})}}
                <div class="red-text">{{form_errors(form.last_name)}}</div>
            </div>
        </div>

        <div class="form-group">
            <label class="col-sm-3 control-label" for="company_name">
                {% trans %}member.personal.company_name{% endtrans %}
                {% if is_granted('ROLE_CLIENT') %}
                    <span class="red-text"> *</span>
                {% endif %}
            </label>
            <div class="col-sm-6">
                {{form_widget(form.company_name, {'id' : 'company_name'})}}
                <div class="red-text">{{form_errors(form.company_name)}}</div>
            </div>
        </div>

        {% if is_granted('ROLE_CUSTOMER') %}
            <div class="form-group">
                <label class="col-sm-3 control-label" for="gender">{% trans %}member.personal.gender{% endtrans %} <span id="email-result-true"></span></label>
                <div class="col-sm-6 radio-checkbox">
                    {{form_widget(form.gender, {'id' : 'gender'})}}
                    <div class="red-text">{{form_errors(form.gender)}}</div>
                </div>
            </div>
            <div class="form-group">
                <label class="col-sm-3 control-label" for="birth_date">{% trans %}member.personal.birth_date{% endtrans %} </label>
                <div class="col-sm-6">
                    <div class="row row-5">
                    {% for birth_date in form.birth_date %}
                        <div class="col col-xs-4">
                            {{ form_errors(birth_date) }}
                            {{ form_widget(birth_date) }}
                        </div>
                    {% endfor %}
                    </div>
                    <div class="red-text">{{form_errors(form.birth_date)}}</div>
                </div>
            </div>
        {% endif %}


        <div class="form-group">
            <label class="col-sm-3 control-label" for="phone_number">{% trans %}member.personal.phone{% endtrans %} </label>
            <div class="col-sm-6">
                {{form_widget(form.phone_number, {'id' : 'phone_number'})}}
                <div class="red-text">{{form_errors(form.phone_number)}}</div>
            </div>
        </div>

