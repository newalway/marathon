        <br />
        <div class="form-group">
            <div class="col-sm-offset-3 col-sm-10">
                {#{{form_widget(form.update, {'id' : 'update', 'label': 'profile.edit.submit'|trans({}, 'FOSUserBundle'),'attr': {'class': 'btn btn-marathon'} })}}#}
                <button type="submit" id="update" name="fos_user_profile_form[update]" class="thm-btn arrow-push-in-right"><span>{{'profile.edit.submit'|trans({}, 'FOSUserBundle')}} <i class="fa fa-caret-right"></i></span></button>
                <a href="{{path('fos_user_profile_show')}}" class="thm-btn arrow-push-in-right btn-gray"><span>{{'profile.edit.close'|trans({}, 'FOSUserBundle')}} <i class="fa fa-caret-right"></i></span></a>
            </div>
        </div>

    </form>

</div>
